<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userItemLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:visibility="visible">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="7dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/userTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/userImageView"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="visible" />

    <TextView
        android:id="@+id/userEmployeeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userTextView"
        android:layout_toEndOf="@+id/userImageView"
        android:hint="должность"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/createUserToDoButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/empty24dp"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_event_black_24dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/userEmployeeTextView"
        android:background="?android:attr/listDivider" />

</RelativeLayout>